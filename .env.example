# ── Database ──
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5433/sns_solution

# ── Redis ──
REDIS_URL=redis://localhost:6379/0

# ── JWT ──
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=your-256bit-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── Meta (Instagram/Facebook) ──
META_APP_ID=
META_APP_SECRET=

# ── YouTube ──
YOUTUBE_API_KEY=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# ── AI ──
# Supported providers: claude | openai
AI_PROVIDER=claude
# Claude API Key
ANTHROPIC_API_KEY=
# GPT-4o / Embedding API Key
OPENAI_API_KEY=
# OpenAI embedding model
EMBEDDING_MODEL=text-embedding-3-small

# ── S3 / MinIO ──
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=sns-media
S3_REGION=ap-northeast-2

# ── Encryption ──
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-32byte-aes-key

# ── Sentry ──
SENTRY_DSN=

# ── CORS ──
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ── WebSocket ──
WS_MAX_CONNECTIONS=1000

# ── App ──
# development | staging | production
APP_ENV=development
# DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=DEBUG

# ── Docker Compose (postgres/minio) ──
DB_USER=postgres
DB_PASSWORD=postgres
