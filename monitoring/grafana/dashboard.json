{
  "dashboard": {
    "title": "SNS Solution Dashboard",
    "uid": "sns-main",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "timeseries",
        "targets": [
          { "expr": "rate(http_requests_total[5m])", "legendFormat": "requests/s" }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "Response Time P95",
        "type": "timeseries",
        "targets": [
          { "expr": "http_request_duration_seconds{quantile=\"0.95\"}", "legendFormat": "P95" },
          { "expr": "http_request_duration_seconds{quantile=\"0.5\"}", "legendFormat": "P50" }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          { "expr": "rate(http_requests_errors_total[5m]) / rate(http_requests_total[5m]) * 100", "legendFormat": "Error %" }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 8 }
      },
      {
        "id": 4,
        "title": "Active Connections",
        "type": "gauge",
        "targets": [
          { "expr": "http_requests_active", "legendFormat": "active" }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 6, "y": 8 }
      },
      {
        "id": 5,
        "title": "Requests by Status",
        "type": "piechart",
        "targets": [
          { "expr": "http_requests_by_status", "legendFormat": "{{status}}" }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 }
      },
      {
        "id": 6,
        "title": "Redis Memory Usage",
        "type": "gauge",
        "targets": [
          { "expr": "redis_memory_used_bytes / redis_memory_max_bytes * 100", "legendFormat": "Memory %" }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 8 }
      },
      {
        "id": 7,
        "title": "PostgreSQL Database Size",
        "type": "stat",
        "targets": [
          { "expr": "pg_database_size_bytes{datname=\"sns_solution\"}", "legendFormat": "DB Size" }
        ],
        "gridPos": { "h": 4, "w": 12, "x": 0, "y": 12 }
      },
      {
        "id": 8,
        "title": "Celery Queue Length",
        "type": "timeseries",
        "targets": [
          { "expr": "celery_queue_length{queue=\"critical\"}", "legendFormat": "critical" },
          { "expr": "celery_queue_length{queue=\"high\"}", "legendFormat": "high" },
          { "expr": "celery_queue_length{queue=\"medium\"}", "legendFormat": "medium" },
          { "expr": "celery_queue_length{queue=\"low\"}", "legendFormat": "low" }
        ],
        "gridPos": { "h": 4, "w": 12, "x": 12, "y": 12 }
      }
    ],
    "time": { "from": "now-1h", "to": "now" },
    "refresh": "30s"
  }
}
